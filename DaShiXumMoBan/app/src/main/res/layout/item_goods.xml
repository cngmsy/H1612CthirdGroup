<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_home_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#DCDBDB"
        android:paddingLeft="40px"
        android:gravity="center_vertical"
        android:text="aaaaaaaaaaaa" />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_margin="20px"
        android:layout_gravity="center"
        android:background="@mipmap/food_list_item_image_default" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10px"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:maxLines="2"
            android:text="尖椒土豆丝"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_zucheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:maxLines="2"
            android:text="尖椒土豆丝+千叶豆腐+时蔬"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_yueshaoshounum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:maxLines="1"
            android:text="月售137份"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px">

            <TextView
                android:id="@+id/tv_newprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥30"
                android:textColor="#be5048"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_newprice"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/tv_newprice"
                android:text="￥60"
                android:textColor="#8f8d8d"
                android:textSize="13sp"
                android:textStyle="bold" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_minus"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@mipmap/food_button_minus"
                    android:layout_marginRight="10dp"
                     />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7px"
                    android:layout_marginRight="25px"
                    android:text="0"

                    android:textColor="#000"
                    android:textSize="14sp"
                     />

                <ImageButton
                    android:id="@+id/ib_add"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_marginRight="30px"
                    android:background="@mipmap/food_button_add" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>