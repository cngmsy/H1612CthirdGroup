<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebeeef"
    tools:context="com.jiyun.qcloud.dashixummoban.main.LoginActivity">
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:background="#0cb2f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_back"
            android:textSize="30sp"
            android:background="@drawable/fenlei_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="登录"
            android:textSize="30sp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/ed_phone"
            android:hint="请输入手机号"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="165px" />
        <Button
            android:id="@+id/bt_yanzhengma"
            android:background="#0cb2f4"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="120px" />
    </com.zhy.autolayout.AutoLinearLayout>
    <EditText
        android:id="@+id/ed_yanzhengma"
        android:hint="验证码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180px">
    </com.zhy.autolayout.AutoLinearLayout>
    <Button
        android:id="@+id/bt_login"
        android:background="#27bc20"
        android:text="登录"
        android:textSize="20dp"
        android:textColor="#FFFDFDFD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180px">
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/login_disanfang"
        android:background="@drawable/thridlogin"
        android:layout_width="match_parent"
        android:layout_height="270px" />
</com.zhy.autolayout.AutoLinearLayout>
